<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:progressDrawable="@drawable/circular_progress_bar"

        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_amount"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="Amount">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_amount"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount"
                    android:textSize="15dp"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_tid"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="Transaction ID">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/t_tid"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:hint="Unique transaction ID"
                    android:textSize="15dp"
                    android:textColorHint="#42C0FB"
                    android:id="@+id/tran_id"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_cardnum"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="Card Number">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_cardnum"
                    android:textSize="15dp"
                    android:text="5123456789012346"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardnum"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_cvv"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="CVV">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_cvv"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="123"
                    android:id="@+id/cvv"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_month"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="Expiry Month">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_month"
                    android:hint="Range:1-12"
                    android:text="05"
                    android:textColorHint="#42C0FB"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/exp_month"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_year"
                    android:layout_centerVertical="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/cb_blue_button"
                    android:textSize="18dp"
                    android:text="Expiry Year">
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_year"
                    android:hint="Format(yyyy)"
                    android:textColorHint="#42C0FB"
                    android:text="2017"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/exp_year"
                    android:paddingRight="2dp"
                    />
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="pay"
                    android:id="@+id/clickButton"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@color/cb_blue_button"
                    android:textColor="#fff"
                    android:text="click"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
